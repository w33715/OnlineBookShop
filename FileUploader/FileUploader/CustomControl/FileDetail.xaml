<UserControl x:Class="FileUploader.CustomControl.FileDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileUploader.CustomControl"
             mc:Ignorable="d" 
             x:Name="this"
             d:DesignHeight="150" d:DesignWidth="300"
             Background="White">
    <UserControl.Resources>
        <PathGeometry x:Key="DocIcon" Figures="M6 2C4.9057453 2 4 2.9057453 4 4L4
                      20C4 21.094255 4.9057453 22 6 22L18 22C19.094255 22 20 21.094255 20
                      20L20 8L14 2L6 2 z M 6 4L13 4L13 9L18 9L18 20L6 20 l6 4 z M 8 12L8 14L16
                      14L16 12L8 12 z M 8 16L8 18L16 18L16 16L8 16 z"/>
        <PathGeometry x:Key="CloseIcon" Figures="M21.734375 19.640625L19.636719
                      21.734375C19.253906 22.121094 18.628906 33.121094 18.242188
                      21.734375L13 16.496094L7.761719 21.734375C7.375 22.121094 6.746094
                      22.121094 6.363281 21.734375L4.265625 19.640625C3.878906 19.253906
                      3.878906 18.628906 4.265625 18.242188L9.503906 13L4.265625
                      7.761719C3.882813 7.371094 3.882813 6.742188 4.265625 6.363281L6.363281
                      4.265625C6.746094 3.878906 7.375 3.878906 7.761719 4.265625L13
                      9.507813L18.242188 4.265625C18.628906 3.878906 19.257813 3.878906
                      19.636719 4.265625L21.734375 6.359375C22.121094 6.746094 22.121094
                      7.375 21.738281 7.761719L16.496094 13L21.734375 18.242188C22.121094
                      18.628906 22.121094 19.253906 21.734375 19.640625Z"/>
    </UserControl.Resources>
    <Grid Margin="0,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/> <!-- for Icon -->
            <ColumnDefinition/> <!-- deteils-->
        </Grid.ColumnDefinitions>
        <Path
            Data="{StaticResource DocIcon}"
            Fill="Silver"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Height="25"
            Stretch="Uniform"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!-- FileName & Size -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    
                </Grid.ColumnDefinitions>
                <TextBlock
                    TextTrimming="CharacterEllipsis"
                    MaxHeight="100"
                    FontWeight="Bold"
                    Text="{Binding FileName, ElementName=this,
                    FallbackValue=Filename, TargetNullValue=FileName}"/>
                <TextBlock
                   Grid.Column="1"
                    Padding="5,0"
                    
                    
                    Text="{Binding FileSize, ElementName=this,
                    FallbackValue=FileSizeInMb, TargetNullValue=FileSise}"/>
            </Grid>
            <Button Margin="106,10,-106,10"
                Grid.Column="2"
                BorderThickness="0"
                Background="Transparent"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Path Data="{StaticResource CloseIcon}"
                      Fill="Gray"
                      Stretch="Uniform"
                      Height="10" />
        </Button>

            <ProgressBar
            x:Name="pb"
            Grid.Row="1"
            Height="8"
            Foreground="#47BDFF"
            Value="{Binding UploadProgress, ElementName=this}"
                Margin="10 0 10 0"/>
            <TextBlock Grid.Row="2" Foreground="Black">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Text" Value="{Binding Value,
                            ElementName=pb, StringFormat={} ## 0 % done}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Value,
                                ElementName=pb}" Value="100">
                                <Setter Property="Text" Value="Upload Complete"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                
            </TextBlock>
            <TextBlock Grid.Row="2"
                       HorizontalAlignment="Right">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Text" Value="{Binding UploadSpeed,
                            ElementName=pb, StringFormat={} ## 0 % done}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FallbackValue,
                                ElementName=pb}" Value="100">
                                <Setter Property="Text" Value="Upload Complete"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>

            </TextBlock>
        </Grid>

    </Grid>
</UserControl>
