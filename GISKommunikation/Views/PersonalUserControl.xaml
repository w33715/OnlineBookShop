                <Grid Margin="33 170 ">
                    <!--#region  ProgressBar -->
                    <Canvas>
                        <Path x:Name="progressBar"
                  Fill="Transparent"
                  Stroke="#FEF200"
                  StrokeThickness="20"
                  StrokeStartLineCap="Flat"
                  StrokeEndLineCap="Flat"
                  StrokeLineJoin="Round">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure StartPoint="0 -100"
                                    IsClosed="False">
                                        <LineSegment Point="0 -100"/>
                                        <ArcSegment x:Name="arc"
                                        Size="100 100"
                                        IsLargeArc="True"
                                        SweepDirection="Clockwise"/>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="50"
                                      ShadowDepth="2"
                                      Direction="-90"
                                      Color="#FEF200"/>
                            </Path.Effect>

                        </Path>



                    </Canvas>




                    <!--#endregion-->




