<Window x:Class="RessourceDictionarySamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RessourceDictionarySamples"
        mc:Ignorable="d"
        Title="Ressource Dictionary Sample" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <Label Style="{StaticResource Titlelabel}">BIG TITLE</Label>
            <Label Style="{StaticResource TextboxLabel}">Full name</Label>
            <TextBox />
            <Button Style="{StaticResource SubmitButton}">Submit</Button>
            <Button Style="{StaticResource CancelButton}">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
