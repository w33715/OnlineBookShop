<Application x:Class="RessourceDictionarySamples.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RessourceDictionarySamples"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="ResourceDictionaries/LabelDictionary.xaml"/> 
            
            </ResourceDictionary.MergedDictionaries>         
        </ResourceDictionary>           
    </Application.Resources>
</Application>
